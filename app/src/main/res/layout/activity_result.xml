<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundresult"
    tools:context=".ResultActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/congrateImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congrate"
        >

    </ImageView>

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@+id/congrateImage"
        android:text="Bạn đã hoàn thành bài kiểm tra"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        ></TextView>
    
    <LinearLayout
        android:layout_below="@+id/successTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctAnswer"
            android:textColor="#00C853"
            android:textStyle="bold"
            android:text="Số câu đúng: 0"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inCorrectAnswer"
            android:textColor="#DD2C00"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="Số câu sai: 0"
            ></TextView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReview"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ln1"
        android:background="@drawable/round_back_green10"
        android:text="Xem lai"
        android:textColor="#FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_green10"
        android:text="Kết thúc"
        android:textColor="#FFFFFF" />

</RelativeLayout>